general {
  colors = true
  interval = 5
}

order += "volume master"
order += "disk /"
order += "memory"
order += "battery all"
order += "load"
order += "tztime local"

volume master {
  format = "%volume vol"
  format_muted = "muted (%volume)"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

battery all {
  format = "%status %percentage %remaining"
}

tztime local {
  format = "%Y-%m-%d %H:%M:%S"
}

load {
  format = "%1min"
}

disk "/" {
  format = "%avail"
}

memory {
  format = "%available"
}
